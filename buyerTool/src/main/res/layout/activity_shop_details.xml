            <!--android:paddingBottom="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:text="@string/buy"-->
            <!--android:textColor="@android:color/white" />-->
        </LinearLayout>
    </com.nahuo.widget.TouchRelativeLayout>
</LinearLayout>

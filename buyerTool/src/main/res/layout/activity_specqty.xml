<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/specqty_layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:id="@+id/specqty_colorView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/specqty_tvColor_text"
                    android:textSize="@dimen/fontsize_content_normal" />

                <TextView
                    android:id="@+id/specqty_tvColors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/more_mini"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/fontsize_content_normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:id="@+id/specqty_sizeView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/specqty_tvSize_text"
                    android:textSize="@dimen/fontsize_content_normal" />

                <TextView
                    android:id="@+id/specqty_tvSizes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/more_mini"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/fontsize_content_normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray" />
        </LinearLayout>

        <Button
            android:id="@+id/specqty_btnSave"
            style="@style/button_orange_style"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="@string/specqty_btnSave_text"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/specqty_openclose_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/specqty_btnSave"
            android:visibility="gone">

            <!--<View-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="@color/lightgray" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="是否排单" />

            <ImageView
                android:id="@+id/specqty_img_openclose"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/close_icon"
                android:visibility="visible" />

            <EditText
                android:id="@+id/specqty_img_pd_day"
                style="@style/edittext_one_style"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="8dp"
                android:inputType="numberSigned"
                android:text="排单天数"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/specqty_img_pd_day_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="天"
                android:visibility="invisible" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_mid1"
            android:background="@color/bg_gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:overScrollMode="never" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_mid1"
            android:background="@color/bg_gray" />

        <ListView
            android:id="@+id/specqty_lvSpecQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:overScrollMode="never"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null" />
    </LinearLayout>
</ScrollView>
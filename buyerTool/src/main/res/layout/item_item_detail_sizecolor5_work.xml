<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="12">

    <CheckBox
        android:id="@+id/item_detail_sizecolor_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

        <TextView
            android:id="@+id/item_detail_sizecolor_item_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:text="颜色" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_weight="2"
        android:text="尺码" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_weight="2"
        android:text="开单" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_weight="2"
        android:text="欠货" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/item_detail_sizecolor_item_qty_reduce"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="-" />
        <TextView
            android:id="@+id/item_detail_sizecolor_item_qty"
            android:background="@drawable/bg_rect_gray_corner"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="match_parent"
            android:text="1" />
        <TextView
            android:id="@+id/item_detail_sizecolor_item_qty_add"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="+" />
    </LinearLayout>
</LinearLayout>
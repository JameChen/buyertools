<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="85dp"
            android:layout_height="85dp">

            <ImageView
                android:id="@+id/fiv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@color/color_f6" />

            <LinearLayout
                android:id="@+id/ll_del"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/delet_zhaopian_1x" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_upload_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_upload_image_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressbar"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="@style/StyleProgressBarMini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="11dp"
                android:background="@drawable/bg_shape_progressbar_bg"
                android:max="100"
                android:progress="0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_re_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2bc267"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="重传"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#c22b81"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="暂停"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_upload_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_re_upload"
                android:background="#2b54ea"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="信息"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_upload_statu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:text="失败"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_upload_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="30dp"
                android:paddingLeft="10dp"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="visible"></TextView>

            <TextView
                android:id="@+id/tv_upload_new_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:text="(新款)"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@color/line_gray"></View>
</RelativeLayout>
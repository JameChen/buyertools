<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/item_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/start"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_cover"
        android:orientation="vertical"
        android:id="@+id/ll_content"
     >

        <TextView
            android:id="@+id/item_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text=""/>


        <TextView
            android:id="@+id/item_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:maxLines="2"
            android:text=""/>

        <TextView
            android:id="@+id/item_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text=""/>
        <TextView
            android:id="@+id/item_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_text_color_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@+id/ll_content"
        android:layout_toRightOf="@+id/item_cover"
        android:text="颜色 尺码"/>
    <TextView
        android:id="@+id/item_text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@+id/item_cover"
        android:text=""/>
    <CheckBox
        android:id="@+id/cb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/edit_cb_bg"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/item_text_code"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#eee"></View>

</RelativeLayout>
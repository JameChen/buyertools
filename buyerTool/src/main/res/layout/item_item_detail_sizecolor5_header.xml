<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <RelativeLayout style="@style/rl_style_head">

        <CheckBox
            android:layout_centerInParent="true"
            android:id="@+id/item_detail_sizecolor_cb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_detail_sizecolor_item_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="颜色" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:text="尺码" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:text="已拼" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:text="开单" />

    <TextView
        android:id="@+id/item_detail_sizecolor_item_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="入仓" />
</LinearLayout>